%section.panel
  %header.panel-heading.text-center
    = t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions')
  %article.panel-body
    = bootstrap_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|
      = devise_error_messages!
      = f.email_field :email
      %div= f.submit t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions')
    = render "devise/shared/links"
