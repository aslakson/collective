.row
  .col-sm-6
    = bootstrap_form_for @group do |f|
      - if @group.errors.any?
        #error_explanation
          %h2= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"
          %ul
            - @group.errors.full_messages.each do |msg|
              %li= msg

      = f.text_field :name
      = f.collection_select(:user_ids, User.all, :id, :email, {}, {:multiple => true})
      .actions
        = f.submit 'Save'
