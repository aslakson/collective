%h1 Listing users

= link_to 'New User', new_user_path, {class: 'pull-right btn btn-default'}

%br
%table.table.table-striped.table-hover
  %caption= page_entries_info @users
  %thead
    %tr
      %th= t('.full_name', :default=>"Full Name")
      %th= t('.email', :default=>"Email")
      %th{colspan: "3"}
        = t('actions', :default=>"Actions")
  %tbody
    - @users.each do |user|
      %tr
        %td= user.full_name
        %td= user.email
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }
  %tfoot
    %tr 
      %td{:colspan => "5"}= paginate @users
